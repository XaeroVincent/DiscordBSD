{
  "name": "DiscordBSD",
  "version": "1.0.0",
  "description": "An attempt at a native discord client for FreeBSD.",
  "main": "./build/main.js",
  "scripts": {
    "build": "mkdir -p build && copyfiles -u 1 \"src/titlebar/**/*\" \"build\" && tsc -p .",
    "run": "electron37 build/main.js",
    "postbuild": "copyfiles -u 1 \"src/assets/**/*\" \"build\"",
    "make-app": "npm run build && npm run postbuild && npm run run",
    "clean": "rm -r build/",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "build": {
    "files": [
      "build/**/*",
      "package.json"
    ],
    "asar": true
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "electronZipDir": ".",
        "asar": true,
        "ignore": [
          "\\.zip$"
        ],
        "makers": [
          {
            "name": "@electron-forge/maker-zip",
            "platforms": [
              "linux"
            ]
          }
        ],
        "files": [
          {
            "from": "build",
            "to": "build",
            "filter": ["**/*"]
          },
          {
            "from": "package.json",
            "to": "package.json"
          }
        ]
      }
    }
  },

  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@types/node": "^22.17.1",
    "copyfiles": "^2.4.1",
    "electron-builder": "26.0.12",
    "typescript": "^5.9.2",
    "electron": "37.4.0"
  }
}
